<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SoftwareProject.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:SoftwareProject.Pages"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SoftwareProject.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SoftwareProject">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Panel>
        <TabControl x:Name="TabControl" Classes="sidebar">
            <TabItem Header="Hoofdscherm">
                <pages:HomePage />
            </TabItem>
            <TabItem Header="Portfolio">
                <pages:PortfolioPage />
            </TabItem>
            <TabItem Header="Instellingen">
                <pages:SettingsPage />
            </TabItem>
        </TabControl>
    </Panel>

</Window>